{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "commonjs",
    "rootDir": "./staging",
    "moduleResolution": "node",
    "baseUrl": "./staging",
    "paths": {},
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "typedocOptions": {
    "entryPoints": ["staging/"],
    "entryPointStrategy": "Expand",
    "out": "docs/typedoc",
    "exclude": ["**/node_modules/**", "dist/**", "staging/core/**", "**/__mocks__/**"],
    "plugin": "typedoc-plugin-markdown",
    "hideBreadcrumbs": true,
    "hideInPageTOC": true,
    "allReflectionsHaveOwnDocument": true
  },
  "exclude": ["src/**", "dist/**"]
}
